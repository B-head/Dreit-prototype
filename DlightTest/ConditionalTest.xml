<?xml version="1.0" encoding="utf-8" ?>
<compile-test xmlns="CompileTestSchema.xsd">
  <case>
    <code>
      if true :: echo 10
    </code>
    <output>10</output>
  </case>

  <case>
    <code>
      if un false than echo 10
      echo 20
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Bool){
        if a {
          echo 10
        } else {
          echo 20
        }
      }
      foo(true)
      foo(false)
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Bool) :: if a :: 10 else 20
      
      echo foo(true)
      echo foo(false)
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
      routine foo(a:Bool, b:Bool){
        return if a than if b than 10 else 40 else if b than 20 else 30
      }
      echo foo(true, true)
      echo foo(true, false)
      echo foo(false, true)
      echo foo(false, false)
      ]]>
    </code>
    <output>10 40 20 30</output>
  </case>

  <case ignore="true">
    <code>
      <![CDATA[
      routine foo(a:Int32) :: if a > 0 :: foo(a - 1) + 5 else 1
      
      echo foo(10)
      ]]>
    </code>
    <output>51</output>
  </case>

  <case>
    <code>
      <![CDATA[
        if 2 < 5 :: echo 10
        if un 2 > 5 :: echo 20
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
        if 2 <= 5 <= 8 :: echo 10
        if un 8 <= 5 <= 2 :: echo 20
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
        if 22 > 6 && 33 >= 9 :: echo 10
        if un 22 < 6 && 33 <= 9 :: echo 20
      ]]>
    </code>
    <output>10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
        routine foo(a:Int32){
          if a = 5 || a = 10 :: echo 10 else echo 20
        }
        foo(5)
        foo(10)
        foo(15)
      ]]>
    </code>
    <output>10 10 20</output>
  </case>

  <case>
    <code>
      <![CDATA[
        routine foo(a:Int32){
          if 3 <> a <> 6 :: echo 10 else echo 20
        }
        foo(1)
        foo(3)
        foo(6)
      ]]>
    </code>
    <output>10 20 20</output>
  </case>
</compile-test>