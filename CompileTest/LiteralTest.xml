<?xml version="1.0" encoding="utf-8" ?>
<compile-test xmlns="CompileTestSchema.xsd">
  <case>
    <code>
      stdout := 10
    </code>
    <output>10</output>
  </case>
  
  <case>
    <code>
      stdout := 00123
      stdout := 4_5_6
      stdout := 56.789
    </code>
    <output>123 456 56.789</output>
  </case>

  <case>
    <code>
      stdout := 0b1111;
      stdout := 0o77;
      stdout := 0d999;
      stdout := 0xFF.0xff;
    </code>
    <output>15 63 999 255.99609375</output>
  </case>

  <case>
    <code>
      stdout := "Hello world!"
    </code>
    <output>Hello world!</output>
  </case>

  <case>
    <code>
      stdout := 'Hello world!'
      stdout := `Hello world!`
    </code>
    <output>Hello world! Hello world!</output>
  </case>
  
  <case>
    <code>
      stdout := "こんにちは"
    </code>
    <output>こんにちは</output>
  </case>

  <case>
    <code>
      stdout := ""
    </code>
    <output></output>
  </case>

  <case>
    <code>
      stdout := "string\"output\""
    </code>
    <output>string"output"</output>
  </case>

  <case>
    <code>
      var a := 100
      stdout := "{ a }"
    </code>
    <output>100</output>
  </case>

  <case>
    <code>
      var a := 100
      stdout := "a = { a };"
    </code>
    <output>a = 100;</output>
  </case>

  <case>
    <code>
      stdout := "{ "こんばんは" }"
    </code>
    <output>こんばんは</output>
  </case>

  <case>
    <code>
      var a := 100
      stdout := "a { "= { a }" };"
    </code>
    <output>a = 100;</output>
  </case>

  <case>
    <code>
      10, "hello" =: stdout
    </code>
    <output>10 hello</output>
  </case>
</compile-test>
